function centuryFromYear(year) {
	var sYear = year.toString();
	var iValue1, iValue2;
	if (sYear.length == 4) {
		iValue1 = parseInt(sYear.substring(0,2));
		iValue2 = parseInt(sYear.substring(2,4));
	} else if (sYear.length == 3) {
		iValue1 = parseInt(sYear.substring(0,1));
		iValue2 = parseInt(sYear.substring(1,3));
	} else {
		iValue1 = 1;
		iValue2 = 0;
	}
	if (iValue2 > 0) {
		iValue1++;
	}
	return iValue1;
}
centuryFromYear(200) => 2
centuryFromYear(50) => 1
centuryFromYear(2001) => 21
